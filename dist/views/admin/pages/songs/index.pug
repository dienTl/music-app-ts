extends ../../layouts/default.pug

block main
  h1(class="mb-4") #{pageTitle}

  .card.mb-2
    .card-header Danh sách
    .card-body
      .row
        .col-6

        .col-4.text-right
          a(
            href=`/${prefixAdmin}/songs/create` class="btn btn-outline-success"
          ) + Thêm mới

    table(
      class="table table-hover table-sm"
    )
      thead
        tr
          th STT
          th Hình ảnh
          th Tiêu đề
          //- th ca sĩ
          //- th chủ đề
          //- th vị trí
          th Trạng thái
          th Hành động
          
      tbody
        each item, index in songs
          tr
            td #{index+1}
            td
              img(src=item.avatar, alt =item.title width="100px")
            td #{item.title}
            //- td dữ liệu ca sĩ
            //- td dữ liệu chủ đề
            //- td dữ liệu vị trí
            td
              if(item.status== "active")
                a(
                  href="javascript:;"
                  class="badge badge-success"
                ) Hoạt động
              else
                a(
                  href="javascript:;"
                  class="badge badge-danger"
                ) Dừng hoạt động
            td
              a(
                class="btn btn-secondary btn-sm"
                href=`/S(prefixAdmin)/songs/detail/${item.id}`
                ) Chi tiết
              a(
                class="btn btn-warning btn-sm ml-1"
                href=`/${prefixAdmin}/songs/edit/${item.id}`
                ) Sửa
              button(
                class="btn btn-danger btn-sm ml-1"
                button-delete
                data-id=item.id
              ) Xóa